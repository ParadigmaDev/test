{% extends 'base.html.twig' %}

{% block title %}Edit Quote{% endblock %}

{% block body %}
    <h1>Edit Quote</h1>

    {{ include('quote/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('quote_index') }}">back to list</a>

    {{ include('quote/_delete_form.html.twig') }}
{% endblock %}

{% block javascripts %}
    <script>
        $("#quote_author").select2({
            tags: true
        });
        $("#quote_type").select2({
            tags: true,
            tokenSeparators: [',', ' ']
        })
    </script>
{% endblock %}
